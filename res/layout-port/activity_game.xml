<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".GameActivity" >

    <org.blockinger.game.BlockBoardView
        android:id="@+id/boardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/leftButton"
                    style="@android:style/Widget.ImageWell"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:clickable="true"
                    android:contentDescription="left move Button"
                    android:scaleType="fitCenter"
                    android:src="@drawable/left_button_icon" />

                <ImageButton
                    android:id="@+id/rightButton"
                    style="@android:style/Widget.ImageWell"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contentDescription="right Move Button"
                    android:scaleType="fitCenter"
                    android:src="@drawable/right_button_icon" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/softDropButton"
                style="@android:style/Widget.ImageWell"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="soft Drop Button"
                android:scaleType="fitCenter"
                android:src="@drawable/soft_drop_button_icon" />

            <ImageButton
                android:id="@+id/hardDropButton"
                style="@android:style/Widget.ImageWell"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="Hard Drop Button"
                android:scaleType="fitCenter"
                android:src="@drawable/hard_drop_button_icon" />
        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5" />

        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical" >

            <View
                android:id="@+id/View03"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.3" />

            <ImageButton
                android:id="@+id/rotateRightButton"
                style="@android:style/Widget.ImageWell"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="rotate right Button"
                android:scaleType="fitCenter"
                android:src="@drawable/rotate_right_button_icon" />

            <View
                android:id="@+id/View01"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.3" />

            <ImageButton
                android:id="@+id/rotateLeftButton"
                style="@android:style/Widget.ImageWell"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="rotate left Button"
                android:scaleType="fitCenter"
                android:src="@drawable/rotate_left_button_icon" />

            <View
                android:id="@+id/View02"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.3" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1" />
    
</LinearLayout>